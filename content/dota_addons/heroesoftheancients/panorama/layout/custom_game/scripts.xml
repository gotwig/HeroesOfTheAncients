<root>
	<styles>
			<include src="file://{resources}/styles/custom_game/game_hud.css" />

	</styles>
	<scripts>

	
		<include src="file://{resources}/scripts/unit_selection.js" />
		<include src="file://{resources}/scripts/clicks.js" />
		<include src="file://{resources}/scripts/game_hud.js" />
		
	</scripts>
	<script>
		$.Msg( "Compiled Panorama Scripts!" );
	</script>

	<Panel class="MainPanel" hittest="false">

		<Panel id="MainPanel" class="MainPanel" hittest="false">
			

			<Panel id="DebugPanel" hittest="false">
			</Panel>
			<Panel id="HeroPanel" hittest="false">
				<Panel class="BuffPanel" id="BuffPanel">
				
				</Panel>

				<Panel class="HealthPanel" id="HealthPanel">
				
				</Panel>

				<Panel class="AbilityPanel" hittest="false" id="AbilityPanel">
				
				</Panel>
			</Panel>
			<Panel id="TimersPanel" hittest="false">
			
				<Button id="teleport" onactivate="teleportBase()">
				<Image src="file://{images}/custom_game/hud/teleportBase.png" />
				</Button>
			
				<Button id="heroLockActivator" onactivate="heroCamLock()">
				<Label class="TimerText" text="Lock camera"/>
				</Button>
				
				<Label id="SuddenDeathTimer" class="TimerText" text=""/>
			</Panel>
			
			<Panel hittest="false" id="TimeBar">
			  <Panel hittest="false" id="TimeBarLeft" class="TimeYellow"> 
			  		<Label hittest="false" id="TimeName" class="UIText" text="Capturing Camp"/>
			  </Panel>
			</Panel>
			
		</Panel>
	</Panel>
</root>