<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/action_bar.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/action_bar.js" />
	</scripts>

	<Panel class="AbilityOverlayRoot">
	
		<Panel id="mountHorse" onmouseover="AbiShowTooltip('mountHorse')" onmouseout="AbiHideTooltip('mountHorse')" class="abilityLeftWing abilityWing">
		
			<Button id="mount" onactivate="mountHorse()">
				<Image src="file://{images}/custom_game/hud/mount.png" />
			</Button>
			
			<Panel id="MountHotkey">
				<Label id="MountHotkeyText" text="V" />
			</Panel>
		
		</Panel>
		
		<Panel id="ability_list" />
					
					
		<Panel  id="teleportBase" onmouseover="AbiShowTooltip('teleportBase')" onmouseout="AbiHideTooltip('teleportBase')" class="abilityRightWing abilityWing">
			<Button id="teleport" onactivate="teleportBase()">
				<Image src="file://{images}/custom_game/hud/teleportBase.png" />
			</Button>
			
			<Panel id="TeleportHotkey">
				<Label id="TeleportHotkeyText" text="B" />
			</Panel>
			
		</Panel>
				<Button id="LevelUpButton" onactivate="OnLevelUpClicked()">
			<Panel id="LevelUpButtonInset">
				<Label id="levelupText" text="#LevelUp" />
			</Panel>

		</Button>
			<Label  id="LevelUpButtonSkill" text="Select a skill" />

	</Panel>

</root>